<nav class="bg-sage-green p-4 flex items-center justify-between px-12">
  <div class="text-white font-semibold text-xl">
    <%= link_to "Book Tracker", root_path %>
  </div>

    <div class="flex items-center space-x-6">
    <% if current_user %>
        <div class="hidden md:flex space-x-6 text-white">
            <%= link_to 'My Likes', liked_path %>
            <%= link_to 'Read Books', read_path %>
            <%= link_to 'Profile', profile_path %>
            <%= button_to "Logout", destroy_user_session_path, data: {turbo: "false"}, method: :delete, class: 'cursor-pointer hover:text-gray-200' %>
        </div>
        <div class="text-white">
              <%= form_with(url: books_search_path, method: :get, class: "flex items-center") do %>
              <%= text_field_tag :title, params[:title], placeholder: "Search for a book", class: "px-4 py-2 rounded-l-md border-2 border-green-asparagus focus:outline-none focus:ring-2 focus:ring-green-asparagus" %>
              <%= submit_tag "Search", class: "px-4 py-2 bg-green-asparagus border-2 border-green-asparagus text-white rounded-r-md hover:bg-green-asparagus-darken focus:outline-none" %>
              <% end %>
            </div>
        <% else %>
        <div class="hidden md:flex space-x-6 text-white">
            <%= link_to "Login", new_user_session_path %>
            <%= link_to "Create Account", new_user_registration_path %>
        </div>
        <% end %>
    </div>
</nav>
