<div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition flex flex-col h-full">
  <% if book[:covers] %>
    <img src="https://covers.openlibrary.org/b/id/<%= book[:covers].first %>-L.jpg" alt="<%= book[:title] %>" class="w-full h-48 object-cover transition-transform transform hover:scale-105">
  <% else %>
    <div class="w-full h-48 flex items-center justify-center bg-gray-200 text-gray-600 text-sm">No cover available</div>
  <% end %>

  <div class="flex flex-col p-4 flex-grow">
    <h2 class="text-xl font-semibold text-gray-800 mb-2"><%= book[:title] %></h2>

    <% if book[:subjects] %>
      <p class="text-sm text-gray-500 italic mb-2">
        Topics: <%= book[:subjects].first(3).map { |s| s.titleize }.join(", ") %>
      </p>
    <% end %>

    <% if book[:isbn] %>
      <p class="text-sm text-gray-500 italic">
        ISBN: <%= book[:isbn].first %>
      </p>
    <% end %>

    <div class="mt-auto">
      <% if show_remove_button %>
        <%= button_to 'Remove from likes', like_path(book[:key]), method: :delete, class: 'mt-4 bg-green-asparagus hover:bg-green-asparagus-darken text-white font-semibold py-2 px-4 rounded shadow transition w-full' %>
      <% else %>
        <%= button_to 'Mark unread', read_book_path(book[:key]), method: :delete, class: 'mt-4 bg-green-asparagus hover:bg-green-asparagus-darken text-white font-semibold py-2 px-4 rounded shadow transition w-full cursor-pointer' %>
      <% end %>
    </div>
  </div>
</div>
