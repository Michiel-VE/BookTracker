<div class="max-w-md mx-auto bg-white p-8 rounded-lg shadow-md mt-10">
  <h2 class="text-2xl font-semibold text-sage-800 mb-6 text-center">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :email, class: "block text-sage-700 font-medium mb-1" %>
      <%= f.email_field :email,
                        autofocus: true,
                        autocomplete: "email",
                        class: "w-full border border-sage-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-sage-400" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block text-sage-700 font-medium mb-1" %>
      <% if @minimum_password_length %>
        <em class="text-sm text-sage-500">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password,
                           autocomplete: "new-password",
                           class: "w-full border border-sage-300 rounded-md px-3 py-2 mt-1 focus:outline-none focus:ring-2 focus:ring-sage-400" %>
    </div>

    <div class="mb-6">
      <%= f.label :password_confirmation, class: "block text-sage-700 font-medium mb-1" %>
      <%= f.password_field :password_confirmation,
                           autocomplete: "new-password",
                           class: "w-full border border-sage-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-sage-400" %>
    </div>

    <div class="text-center">
      <%= f.submit "Sign up",
                   class: "w-full bg-sage-600 hover:bg-sage-700 text-white font-semibold py-2 px-4 rounded-md transition duration-200" %>
    </div>
  <% end %>

  <div class="text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>