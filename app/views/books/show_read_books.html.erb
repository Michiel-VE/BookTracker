<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-center mb-6 text-green-asparagus">Your Read Books</h1>

  <% if @read_books.any? %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <%= render partial: "shared/list_books", collection: @read_books, as: :book, locals: { show_remove_button: false } %>
    </div>
  <% else %>
    <p class="text-center text-gray-500 mt-6">You haven't read any books yet.</p>
  <% end %>
</div>
